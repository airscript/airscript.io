html, body, section.content, .main
  height 100%

@font-face
  font-family: 'DynalightRegular'
  src: url('/font/Dynalight-Regular-webfont.eot')
  src: url('/font/Dynalight-Regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('/font/Dynalight-Regular-webfont.woff') format('woff'),
       url('/font/Dynalight-Regular-webfont.ttf') format('truetype'),
       url('/font/Dynalight-Regular-webfont.svg#DynalightRegular') format('svg')
  font-weight: normal
  font-style: normal

.new_file
  color white
  margin-top 1em
  margin-left 1em

.script_actions
  position absolute
  top 10px
  left 10px

.right
  float right

.gist_modal
  .gist
    display block
    margin 1em 0

.centered
  text-align: center

.get_started
  color white
  font-size 35px
  padding 0.5em 1em
  padding-left 0.3em
  vertical-align middle

  &:hover
    color white

.callout
  position relative

  .button_container
    position relative

  .logo
    position: absolute
    top 10px
    bottom 0
    left 0
    right 35px
    margin auto
    background-image: url('/img/airscript.png')
    width: 325px
    height: 181px

.brand
  text-shadow: rgba(0,0,0,0.3) 0 5px 5px
  padding: 0
  text-align: center
  margin: 0
  font: 40px 'DynalightRegular', Arial, sans-serif

.icon-globe
  display inline-block
  float right

.hero-unit
  padding-top: 0
  padding-bottom: 0
  background: none

  .callout
    font: 200px 'DynalightRegular', Arial, sans-serif
    text-align: center
    margin-top: 0

body
  background-color #efefef
  background-image url('/img/lightpaperfibers.png')
  padding 0

.row-fluid
  height 100%

.gist-description
  font-style italic
  padding 1em
  padding-top 0

.scripts
  color hsl(206, 60%, 90%)
  height 100%
  position relative

  a
    color hsl(206, 60%, 90%)

  .btn
    margin-top 1em
    width 38%
    margin-left 3px

  input
    width 90%
    max-width 90%

  ul
    list-style none
    margin-left 0

.editor_container
  .header
    box-sizing border-box
    position absolute
    top 0
    left 0
    height 50px
    width 100%
    padding-left 1em
    background-color #E1DBD1
    color white

    background-image: linear-gradient(bottom, rgb(47,126,186) 48%, rgb(65,141,196) 74%)
    background-image: -o-linear-gradient(bottom, rgb(47,126,186) 48%, rgb(65,141,196) 74%)
    background-image: -moz-linear-gradient(bottom, rgb(47,126,186) 48%, rgb(65,141,196) 74%)
    background-image: -webkit-linear-gradient(bottom, rgb(47,126,186) 48%, rgb(65,141,196) 74%)
    background-image: -ms-linear-gradient(bottom, rgb(47,126,186) 48%, rgb(65,141,196) 74%)

    background-image: -webkit-gradient(
      linear,
      left bottom,
      left top,
      color-stop(0.48, rgb(47,126,186)),
      color-stop(0.74, rgb(65,141,196))
    )

    h3
      margin-bottom 0.25em
      margin-top 0.25em

.edit_script
  margin-bottom 1em

.ace_gutter-layer
  background-color white

.files li
  padding 0.5em
  padding-left 1em

.files .script
  cursor pointer

  &.active
    background-color white
    color #0A4575

.edit_script_input
  margin-bottom 0

.scripts
  box-sizing border-box
  background-color #333
  display block
  padding 0
  position absolute
  right 0
  width 20%

  &.fullscreen
    display none

  h4
    color: #efefef
    margin-top 0

.script_controls
  position absolute
  bottom 1.5em
  left 20px
  right 20px

  .btn
    width 90%

.button_container
  text-align center

.username
  display inline-block

.login, .logout
  padding-top 10px

.login-container
  text-align center

.btn.fullscreen
  top 10px
  right 10px
  position absolute
  z-index 1

.edit
  position absolute
  top 0
  width 80%

  &.fullscreen
    width 100%

  .inline
    margin-top: 0
    margin-left: 10px

#editor
  position absolute
  top 50px
  left 0
  right 0
  bottom 0

.hidden, .not_implemented
  display none

.inline
  display: inline-block

.file
  text-align center

  .full_script_path
    margin 0.25em 0.5em
    font-size 16px
    min-width 300px

  .dropdown
    padding-top 10px
    display inline-block
    float right
    padding-right 56px

  .dropdown-menu
    left auto
    right 54px
    cursor pointer

  input
    margin-top: 0.3em
    font-size: 24px

  h3
    display inline-block
    text-shadow rgba(0, 0, 0, 0.3) 1px 1px 0
    margin auto
    margin-top 4px
