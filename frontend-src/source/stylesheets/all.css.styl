html, body, section.content, .main
  height 100%

@font-face
  font-family: 'DynalightRegular'
  src: url('/fonts/Dynalight-Regular-webfont.eot')
  src: url('/fonts/Dynalight-Regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/Dynalight-Regular-webfont.woff') format('woff'),
       url('/fonts/Dynalight-Regular-webfont.ttf') format('truetype'),
       url('/fonts/Dynalight-Regular-webfont.svg#DynalightRegular') format('svg')
  font-weight: normal
  font-style: normal

body
  background-image url('/img/lightpaperfibers.png')

.location
  display inline-block

.right
  float right

.save-script
  top 40px
  right 10px
  position absolute
  width 100px
  z-index 10

h5, h6
  color #efefef
  margin 0

.gist_modal
  .gist
    display block
    margin 1em 0

.centered
  text-align: center

.get_started
  font-size 35px
  padding 0.5em 1em

.callout
  position relative

  .button_container
    position relative

  .logo
    position: absolute
    top 10px
    bottom 0
    left 0
    right 35px
    margin auto
    background-image: url('/img/airscript.png')
    width: 325px
    height: 181px

.brand
  text-shadow: rgba(0,0,0,0.3) 0 5px 5px
  color: #efefef
  padding: 0
  text-align: center
  margin: 0
  font: 40px 'DynalightRegular', Arial, sans-serif

.hero-unit
  padding-top: 0
  padding-bottom: 0
  background: none

  .callout
    font: 200px 'DynalightRegular', Arial, sans-serif
    text-align: center
    margin-top: 0

body
  background-color #efefef
  padding 0

.row-fluid
  height 100%

.gist-description
  color hsl(207, 50%, 88%)
  font-style italic
  padding 1em
  padding-top 0

.new_file
  padding 1em

.scripts
  height 100%
  position relative

  input
    width 90%
    max-width 90%

  ul
    list-style none
    margin-left 0

  a
    color #efefef

.console
  position absolute
  bottom 0
  width 100%

  .nav
    margin-bottom 0

  .output
    background-color #333
    color white
    height 120px

.airscript_background
  background-image: url('/img/airscript.png')
  width: 325px
  height: 181px
  z-index: 100
  position: absolute
  top: 0
  bottom: 0
  left: 30%
  margin: auto
  opacity: 0.1

.run_description
  margin 0
  font-size 1em

.full_url
  position absolute
  top 7px
  right 10px
  width 400px

  svg
    vertical-align middle

.editor_container
  .header
    box-sizing border-box
    position absolute
    top 0
    left 0
    height 50px
    width 100%
    padding-left 1em
    background-color #E1DBD1
    color white

    background #b8c6df
    background -moz-linear-gradient(top,  #b8c6df 0%, #6d88b7 100%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#b8c6df), color-stop(100%,#6d88b7))
    background -webkit-linear-gradient(top,  #b8c6df 0%,#6d88b7 100%)
    background -o-linear-gradient(top,  #b8c6df 0%,#6d88b7 100%)
    background -ms-linear-gradient(top,  #b8c6df 0%,#6d88b7 100%)
    background linear-gradient(to bottom,  #b8c6df 0%,#6d88b7 100%)
    filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#b8c6df', endColorstr='#6d88b7',GradientType=0 )

    h3
      margin-bottom 0.25em
      margin-top 0.25em

.edit_script
  margin-bottom 1em

.clipboard
  cursor pointer
  position absolute
  width 24px
  height 24px
  z-index 1

.clipboard, .clipboard_svg
  right 420px
  top 15px
  position absolute

.clipboard_svg
  fill white

.ace_gutter-layer
  background-color white

.files li
  padding: 0.5em

.files .script
  color white
  cursor pointer

  &.active
    background-color white
    color #0A4575

.edit_script_input
  margin-bottom 0

.modify_script
  color white
  float right

.scripts
  box-sizing border-box
  background-image: -webkit-linear-gradient(top, hsl(207, 84%, 55%), hsl(207, 84%, 25%))
  background-color: hsl(207, 84%, 35%)

  background-color rgb(14, 98, 165)
  padding 0
  width 20%

  h4
    color: #efefef
    margin-top 0

.script_controls
  position absolute
  bottom 1.5em
  left 20px
  right 20px

  .btn
    width 90%

.button_container
  text-align center

.username
  display inline-block

.login, .logout
  padding-top 10px

.edit
  position absolute
  top 0
  left 20%
  width 80%

  .inline
    margin-top: 0
    margin-left: 10px

#editor
  position absolute
  top 50px
  left 0
  right 0
  bottom 0

.hidden, .not_implemented
  display none

.inline
  display: inline-block

.file
  h3
    vertical-align top
    display inline-block
    margin-top 0.25em

.trash_svg
  cursor pointer
  width 24px
  height 24px

.edit_svg, .trash_svg
  fill white
  margin-top 14px
  margin-left 5px
