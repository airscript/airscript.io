html, body, section.content, .main
  height 100%

@font-face 
  font-family: 'DynalightRegular'
  src: url('/fonts/Dynalight-Regular-webfont.eot')
  src: url('/fonts/Dynalight-Regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/Dynalight-Regular-webfont.woff') format('woff'),
       url('/fonts/Dynalight-Regular-webfont.ttf') format('truetype'),
       url('/fonts/Dynalight-Regular-webfont.svg#DynalightRegular') format('svg')
  font-weight: normal
  font-style: normal

.gist_modal
  .gist
    display block
    margin 1em 0

.centered
  text-align: center

.brand
  text-shadow: rgba(0,0,0,0.3) 0 5px 5px
  color: #efefef
  padding: 0
  text-align: center
  margin: 0
  font: 60px 'DynalightRegular', Arial, sans-serif

.hero-unit
  .callout
    font: 200px 'DynalightRegular', Arial, sans-serif
    text-align: center

body
  background-color #efefef

.row-fluid
  height 100%

.scripts
  height 100%
  position relative

  ul
    list-style none

  a
    color #efefef

  .active
    font-weight bold

.console
  position absolute
  bottom 0
  width 100%

  .nav
    margin-bottom 0

  .output
    background-color #333
    color white
    height 120px

.airscript_background
  background-image: url('/img/airscript.png')
  width: 486px
  height: 376px
  z-index: 100
  position: absolute
  top: 0
  bottom: 0
  left: 30%
  margin: auto
  opacity: 0.4

.scripts
  box-sizing border-box
  background-image: -webkit-linear-gradient(top, hsl(207, 84%, 55%), hsl(207, 84%, 25%))
  background-color: hsl(207, 84%, 35%)

  background-color rgb(14, 98, 165)
  border-right 1px solid rgba(0, 0, 0, 0.1)
  padding 1em
  width 20%

  h4
    color: #efefef
    margin-top 0

.script_controls
  position absolute
  bottom 1.5em
  left 20px
  right 20px

  .btn
    width 90%

.button_container
  text-align center

.username
  display inline-block

.login, .logout
  padding-top 10px

.edit
  position absolute
  top 0
  left 20%
  width 80%

  .inline
    margin-top: 0
    margin-left: 10px

#editor
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.hidden, .not_implemented
  display none

.inline
  display: inline-block
